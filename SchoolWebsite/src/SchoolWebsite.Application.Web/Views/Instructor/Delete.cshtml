@model SchoolWebsite.Application.Web.Models.InstructorViewModels.InstructorViewModel

<div class="container">

    <h4>Confirm delete of the Instructor</h4>
    <br />

    
        <div>
            <dl class="dl-horizontal">
                <dt>
                    <label asp-for="Id"></label>:
                </dt>

                <dd>
                    <p>@Model.Id</p>
                </dd>

               <dt>
                    <label asp-for="Name"></label>:
                </dt>

                <dd>
                    <p>@Model.Name</p>
                </dd>

                <dt>
                    <label asp-for="Email"></label>:
                </dt>

                <dd>
                    <p>@Model.Email</p>
                </dd>

                <dt>
                    <label asp-for="Birth"></label>:
                </dt>

                <dd>
                    <p>@Model.Birth</p>
                </dd>

                <dt>
                    <label asp-for="CourseId"></label>:
                </dt>

                <dd>
                    @if (Model.Courses.Any())
                    {
                        @foreach (var item in Model.Courses)
                        {
                            <font>@item.Name</font>
                        }
                    } else
                    {
                        <p>Not assigned to any course</p>
                    }

                </dd>
            </dl>
        </div>
    <form asp-controller="Instructor" asp-action="Delete" method="post">
        <div class="form-group">
            <input type="submit" value="Delete Course"  class="btn btn-danger">
        </div>
    </form>



</div>