@model SchoolWebsite.Application.Web.Models.CourseViewModels.EditCourseViewModel

<div class="container">

    <h2>Edit Course</h2>

    <form asp-controller="Course" asp-action="Edit" method="post">

        <div class="form-group">
            <label asp-for="CourseId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CourseId" class="form-control" disabled/>
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>
        </div>
        <br />
        <br />
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <br />
        <br />
        <div class="form-group">
            <label asp-for="InstructorId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select name="InstructorId">
                    <option></option>
                    @if (Model.Instructors!=null)
                    {
                        @foreach (var item in Model.Instructors)
                        {
                            <option value=@item.Id>@item.Name</option>
                        }
                    }
                </select>
                <span asp-validation-for="InstructorId" class="text-danger"></span>
            </div>
        </div>
        <br />
        <br />
        <div class="form-group">
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary">Add Changes</button>
            </div>
        </div>
    </form>

</div>